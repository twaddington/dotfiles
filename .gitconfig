[core]
    excludesfile = ~/.gitignore
[include]
    path = ~/.gitconfig.local
[color]
    ui = auto
    branch = true
    diff = true
    interactive = true
    status = true
[push]
    default = current
[alias]
    ; unstage file
    unstage = reset HEAD --
    ; undo the most recent commit
    undo = reset --soft HEAD^
    ;
    recent = branch --format='%(if)%(HEAD)%(then)%(color:green)%(end)%(HEAD) %(align:left,16)%(committerdate:relative)%(end)%(refname:short)'
[branch]
    sort = -committerdate
[tag]
    sort = -creatordate
